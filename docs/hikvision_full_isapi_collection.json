{
  "info": {
    "name": "Hikvision Full ISAPI Collection",
    "_postman_id": "hikvision-full",
    "description": "Complete collection of key Hikvision ISAPI endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "AccessControl Capabilities",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/AccessControl/capabilities"
      }
    },
    {
      "name": "UserInfo Capabilities",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/capabilities?format=json"
      }
    },
    {
      "name": "FDLib Capabilities",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/Intelligent/FDLib/capabilities?format=json"
      }
    },
    {
      "name": "UserInfo - Apply (SetUp)",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/SetUp?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfo\": {\n    \"employeeNo\": \"12345\"\n  }\n}"
        }
      }
    },
    {
      "name": "UserInfo - Add Person",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/Record?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfo\": {\n    \"employeeNo\": \"12345\",\n    \"name\": \"Test User\",\n    \"userType\": \"normal\",\n    \"Valid\": {\n      \"enable\": true\n    }\n  }\n}"
        }
      }
    },
    {
      "name": "UserInfo - Modify Person",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/Modify?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfo\": {\n    \"employeeNo\": \"12345\",\n    \"name\": \"Updated User\"\n  }\n}"
        }
      }
    },
    {
      "name": "UserInfo - Delete Person",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfoDetail/Delete?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfoDetail\": {\n    \"employeeNo\": \"12345\"\n  }\n}"
        }
      }
    },
    {
      "name": "UserInfo - Count",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/Count?format=json"
      }
    },
    {
      "name": "UserInfo - Search",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/Search?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfoSearchCond\": {\n    \"searchID\": \"1\",\n    \"searchResultPosition\": 0,\n    \"maxResults\": 30\n  }\n}"
        }
      }
    },
    {
      "name": "FDLib - Count",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/Intelligent/FDLib/Count?format=json"
      }
    },
    {
      "name": "FDLib - FD Search",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/Intelligent/FDLib/FDSearch?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"FDSearchDescription\": {\n    \"searchID\": \"1\",\n    \"searchResultPosition\": 0,\n    \"maxResults\": 20\n  }\n}"
        }
      }
    },
    {
      "name": "FDLib - Add FaceDataRecord",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/Intelligent/FDLib/FaceDataRecord?format=json",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"FaceDataRecord\": {\n    \"FPID\": \"1\",\n    \"faceURL\": \"http://server/image.jpg\",\n    \"faceLibType\": \"blackFD\",\n    \"employeeNo\": \"12345\"\n  }\n}"
        }
      }
    },
    {
      "name": "FDLib - Upload Face (Multipart)",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/Intelligent/FDLib/pictureUpload",
        "header": [
          {
            "key": "Content-Type",
            "value": "multipart/form-data"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "PictureUploadData",
              "type": "file",
              "src": "meta.xml"
            },
            {
              "key": "face_picture",
              "type": "file",
              "src": "face.jpg"
            }
          ]
        }
      }
    },
    {
      "name": "Async Import Users",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/asyncImportDatasTasks",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"UserInfo\": {\n    \"employeeNo\": \"12345\",\n    \"name\": \"ImportTest\"\n  }\n}"
        }
      }
    },
    {
      "name": "Async Import - Task Status",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/AccessControl/UserInfo/asyncImportDatasTasks/1/status?format=json"
      }
    },
    {
      "name": "Event - Subscribe",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/ISAPI/Event/notification/subscribeEvent",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/xml"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "<EventNotification><eventType>All</eventType></EventNotification>"
        }
      }
    },
    {
      "name": "Event - Alert Stream",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/ISAPI/Event/notification/alertStream"
      }
    }
  ]
}